<div class="aeneid-grid justify-items-start">
  <nav
          class="aeneid-pagination-nav sm:flex-row md:col-span-6 md:col-start-3"
          role="navigation"
          aria-label="Pagination Navigation"
  >
    <button
            class="flex items-center border border-transparent p-2 text-black duration-200 hover:border-black"
    >
      <svg
              class="mr-1"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
      >
        <path
                d="M19 12H6M12 5L5 12L12 19"
                stroke="#0C140B"
                stroke-width="0.5"
        />
      </svg>
      PREV
    </button>
    <ul class="flex md:mx-24">
      {% for i in (1..5) %}
        <a href="#" class="aeneid-pagination-item hover:underline">{{ i }}</a>
      {% endfor %}
      <a href="#" class="aeneid-pagination-item hover:underline">...</a>
      <a href="#" class="aeneid-pagination-item pagination-item-current hover:underline">60</a>
    </ul>

    <!--  for disable btn - toggle class - btn-disabled -->

    <button
            class="btn-disabled flex items-center border border-transparent p-2 text-black duration-200 hover:border-black"
    >
      NEXT
      <svg
              class="mr-1 -rotate-180"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
      >
        <path
                d="M19 12H6M12 5L5 12L12 19"
                stroke="#0C140B"
                stroke-width="0.5"
        />
      </svg>
    </button>
  </nav>
</div>