{% liquid 
  assign nav_class = 'navigation-white'

  if request.page_type == 'index'
    assign nav_class = 'navigation-transparent fixed'
  endif 
%}

<header
  class="header aeneid-navigation max-h-screen overflow-y-auto {{ request.page_type }} {{ nav_class }}"
  :class="{'navigation-black' : openNavigate , 'navigation-white' : !openNavigate && pageScrolled, 'navigation-transparent' : !openNavigate && !pageScrolled }"
  id="header"
  x-data="{ openNavigate: false, pageScrolled: false }"
  @click.away="openNavigate = false"
  @scroll.window="pageScrolled = (window.pageYOffset > 20) ? true : false"
>
  <div
    class="m-auto px-4 md:px-12"
    :class="{ '' : openNavigate }"
  >
    <nav class="items-center py-3 aeneid-grid">
      <div class="col-span-3 lg:col-span-2">
        <button
          class="flex items-center py-2 font-medium hover:underline"
          @click="openNavigate = !openNavigate"
        >
          <span class="menu-closed" :class="{ 'hidden' : openNavigate }">Menu</span>
          <span class="menu-opened" :class="{ 'hidden' : !openNavigate }">Close Menu</span>
        </button>
      </div>
      <div class="col-span-4 flex justify-center lg:col-span-3 lg:justify-start">
        <a
          href="{{ routes.root_url }}"
          class="block w-[4.5rem] md:w-[6rem] lg:w-[9rem] header-logo"
          :class="{ 'hidden' : openNavigate }"
        >
          {% render 'logo' %}
        </a>
      </div>

      <div class="col-span-3 lg:col-span-5">
        <div class="flex flex-grow items-center justify-end pr-3 header-nav-links">
          {% render 'nav-account' %}
        </div>
      </div>
    </nav>


