          <span class="menu-opened" :class="{ 'hidden' : !openNavigate }">Close Menu</span>
        </button>
      </div>
      <div class="col-span-3">
        <a
          href="{{ routes.root_url }}"
          class="block"
          :class="{ 'hidden' : openNavigate }"
        >
          {% render 'logo' %}
        </a>
      </div>

      <div class="flex items-center justify-end flex-grow col-span-5">
        {% render 'nav-account' %}
