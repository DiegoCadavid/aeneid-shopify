{% assign image = section.settings.image %}

<section
  class="flex items-end h-screen max-h-[780px] bg-center bg-no-repeat bg-cover   lg:pt-16 lg:items-center"
  style="background-image: url('{{ image | img_url: '1500x' }}');"
>
  <div class="items-end text-white aeneid-grid">
    <div class="py-8 col-span-full lg:col-span-4 lg:col-start-3">
      {% for block in section.blocks %}
        {% render 'featured-collection-block', block: block, class: 'flex flex-col' %}
      {% endfor %}
    </div>
  </div>
</section>
    

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Featured Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "checkbox",
          "id": "show_count",
          "label": "Show collection size",
          "default": true
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "info": "Leave empty to use collection name.",
          "default": "New Arrivals"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button",
          "label": "Button Text",
          "default": "Shop Now",
          "info": "Leave empty to hide button"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image"
    }
  ]
}
{% endschema %}