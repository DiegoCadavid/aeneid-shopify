<div class="grid grid-cols-2">
  <aside>
    {% render 'section-image', image: settings.login_image, class: 'w-full' %}
  </aside>
  
  <div class="container max-w-screen-sm border">
    <renderless-template-switch
      v-slot="{ active, show }"
      initial="login"
    >
      <transition-group name="slide-from-left">
        <div
          v-show="active === 'login'"
          key="login"
        >
          {% render 'layout-account-login' %}
        </div>

        <div
          v-show="active === 'forgot-password'"
          key="forgot-password"
        >
          {% render 'layout-account-forgot-password' %}
        </div>
      </transition-group>
    </renderless-template-switch>
  </div>
</div>